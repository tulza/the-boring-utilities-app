{
    "semi": true,
    "trailingComma": "es5",
    "tabWidth": 4,
    "printWidth": 120,
    "useTabs": false,
    "plugins": ["@ianvs/prettier-plugin-sort-imports", "prettier-plugin-tailwindcss"],
    "importOrder": [
        "^(react/(.*)$)|^(react$)",
        "^(next/(.*)$)|^(next$)",
        "<THIRD_PARTY_MODULES>",
        "",
        "^types$",
        "^@/(.*)$",
        "^[./]"
    ],
    "tailwindFunctions": ["tv", "cva"],
    "importOrderParserPlugins": ["typescript", "jsx", "decorators-legacy"]
}
